{
  "redirects": [
    {
      "source": "/blog/:slug((?!page|preview).*)",
      "destination": "/:slug",
      "permanent": true
    },
    {
      "source": "/category/:slug(.*)",
      "destination": "/blog",
      "permanent": true
    }
  ],
  "buildCommand": "astro build",
  "framework": "astro",
  "build": {
    "env": {
      "NODE_VERSION": "20"
    }
  },
  "images": {
    "sizes": [
      480,
      768,
      1280,
      1920,
      2560
    ],
    "formats": [
      "image/avif",
      "image/webp"
    ],
    "minimumCacheTTL": 31536000
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}