---
import { SITE_CONFIG } from '@utils/constants';

const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'ANASAYFA' },
  { href: '/hizmetlerimiz', label: 'HİZMETLERİMİZ' },
  { href: '/hakkimizda', label: 'HAKKIMIZDA' },
  { href: '/blog', label: 'BLOG' },
  { href: '/iletisim', label: 'İLETİŞİM' },
];
---

<header class="fixed top-0 left-0 right-0 z-40 backdrop-blur-xl transition-all duration-300 border-b border-cyan/20 shadow-2xl" id="header" style="background: linear-gradient(to right, rgba(15, 23, 42, 0.95), rgba(30, 41, 59, 0.97), rgba(15, 23, 42, 0.95)); backdrop-filter: blur(20px) saturate(180%); box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);">
  {/* Subtle gradient overlay */}
  <div class="absolute inset-0 pointer-events-none opacity-30" style="background: radial-gradient(ellipse at top, rgba(93, 211, 224, 0.05), transparent 70%);"></div>
  
  <div class="container relative">
    <div class="flex items-center justify-between h-20">
      {/* Logo */}
      <a href="/" class="flex items-center gap-3 group relative z-10">
        <div class="relative">
          <img 
            src="/images/DSG Servis logosu.webp" 
            alt="DSG Servisi - Yıldızlar Grup" 
            class="h-8 md:h-10 w-auto transition-all duration-300 group-hover:scale-110 relative z-10 filter brightness-105"
            loading="eager"
            fetchpriority="high"
            width="48"
            height="48"
            decoding="async"
          />
        </div>
      </a>

      {/* Desktop Navigation */}
      <nav class="hidden lg:flex items-center gap-8 relative z-10">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`text-gray-200 font-semibold hover:text-cyan-light transition-all duration-300 relative group ${
              currentPath === link.href ? 'text-cyan-light' : ''
            }`}
          >
            {link.label}
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-transparent via-cyan-light to-transparent transition-all duration-300 group-hover:w-full"></span>
          </a>
        ))}
      </nav>

      {/* CTA Button - Subtle Tech Effect */}
      <a 
        href={`tel:${SITE_CONFIG.phone.replace(/\s/g, '')}`}
        class="hidden md:inline-flex px-6 py-3 rounded-lg font-semibold text-white transition-all duration-300 relative z-10 overflow-hidden group"
        style="background: linear-gradient(135deg, rgba(26,156,176,1) 0%, rgba(93,211,224,1) 50%, rgba(26,156,176,1) 100%); box-shadow: 0 4px 15px rgba(26,156,176,0.3);"
        onmousedown="if(window.gtag){window.gtag('event','header_fiyat_iste_butonu',{location:'header_nav'});}"
        onmouseenter="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 20px rgba(26,156,176,0.4)';"
        onmouseleave="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 15px rgba(26,156,176,0.3)';"
      >
        {/* Subtle shimmer effect */}
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-1000"></div>
        <span class="relative z-10">FİYAT İSTE</span>
      </a>

      {/* Mobile Menu Button */}
      <button 
        id="mobile-menu-btn"
        class="lg:hidden text-gray-200 p-2 relative z-10 hover:text-cyan-light transition-all duration-200"
        aria-label="Menüyü Aç"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  {/* Mobile Menu */}
  <div id="mobile-menu" class="hidden lg:hidden backdrop-blur-xl border-t border-cyan/20 shadow-2xl" style="background: linear-gradient(to bottom, rgba(15, 23, 42, 0.98), rgba(30, 41, 59, 0.98)); backdrop-filter: blur(20px) saturate(180%); box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.4);">
    <nav class="container py-4 flex flex-col gap-4">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class={`text-gray-200 font-semibold py-2 hover:text-cyan-light transition-all relative ${
            currentPath === link.href ? 'text-cyan-light' : ''
          }`}
        >
          {link.label}
        </a>
      ))}
      <a href={`tel:${SITE_CONFIG.phone.replace(/\s/g, '')}`} class="inline-flex justify-center items-center px-6 py-3 rounded-lg font-semibold text-white transition-all duration-200 mt-2 relative overflow-hidden group"
        style="background: linear-gradient(135deg, rgba(26,156,176,1) 0%, rgba(93,211,224,1) 50%, rgba(26,156,176,1) 100%); box-shadow: 0 4px 15px rgba(26,156,176,0.3);">
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-1000"></div>
        <span class="relative z-10">FİYAT İSTE</span>
      </a>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Sticky header on scroll - Optimize edilmiş (forced reflow önleme)
  let ticking = false;
  let lastScroll = 0;
  const header = document.getElementById('header');

  window.addEventListener('scroll', () => {
    if (!ticking) {
      requestAnimationFrame(() => {
        // Önce okuma
        const currentScroll = window.pageYOffset;
        const isScrolled = currentScroll > 100;
        
        // Sonra yazmalar (batch)
        if (isScrolled && lastScroll <= 100) {
          header?.classList.add('shadow-2xl');
          header?.style.setProperty('background', 'linear-gradient(to right, rgba(15, 23, 42, 0.98), rgba(30, 41, 59, 0.99), rgba(15, 23, 42, 0.98))');
          header?.style.setProperty('backdrop-filter', 'blur(24px) saturate(180%)');
          header?.style.setProperty('boxShadow', '0 8px 30px rgba(0, 0, 0, 0.5)');
        } else if (!isScrolled && lastScroll > 100) {
          header?.classList.remove('shadow-2xl');
          header?.style.setProperty('background', 'linear-gradient(to right, rgba(15, 23, 42, 0.95), rgba(30, 41, 59, 0.97), rgba(15, 23, 42, 0.95))');
          header?.style.setProperty('backdrop-filter', 'blur(20px) saturate(180%)');
          header?.style.setProperty('boxShadow', '0 4px 20px rgba(0, 0, 0, 0.4)');
        }
        
        lastScroll = currentScroll;
        ticking = false;
      });
      ticking = true;
    }
  }, { passive: true });
</script>

