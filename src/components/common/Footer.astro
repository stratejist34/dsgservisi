---
import { SITE_CONFIG } from '@utils/constants';
---

<footer class="bg-navy text-white">
  <div class="container py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      {/* Company Info */}
      <div>
        <img 
          src="/images/logo.png" 
          alt="DSG Servisi Logo" 
          class="h-10 md:h-12 w-auto mb-6"
          loading="lazy"
          width="48"
          height="48"
        />
        <p class="text-white/80 leading-relaxed mb-6">
          {SITE_CONFIG.stats.experience}+ yıldır güvenilir ve kaliteli DSG servis hizmeti.
        </p>
        <div class="flex gap-4">
          <a 
            href={SITE_CONFIG.socialMedia.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-primary transition-colors duration-300"
            aria-label="Instagram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a 
            href={SITE_CONFIG.socialMedia.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-primary transition-colors duration-300"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
        </div>
      </div>

      {/* Quick Links */}
      <div>
        <h3 class="text-xl font-bold mb-6">Hızlı Bağlantılar</h3>
        <ul class="space-y-3">
          <li>
            <a href="/" class="text-white/80 hover:text-cyan-light transition-colors duration-300">
              Anasayfa
            </a>
          </li>
          <li>
            <a href="/hizmetlerimiz" class="text-white/80 hover:text-cyan-light transition-colors duration-300">
              Hizmetlerimiz
            </a>
          </li>
          <li>
            <a href="/hakkimizda" class="text-white/80 hover:text-cyan-light transition-colors duration-300">
              Hakkımızda
            </a>
          </li>
          <li>
            <a href="/blog" class="text-white/80 hover:text-cyan-light transition-colors duration-300">
              Blog
            </a>
          </li>
          <li>
            <a href="/iletisim" class="text-white/80 hover:text-cyan-light transition-colors duration-300">
              İletişim
            </a>
          </li>
        </ul>
      </div>

      {/* Services */}
      <div>
        <h3 class="text-xl font-bold mb-6">Servislerimiz</h3>
        <ul class="space-y-3">
          <li class="text-white/80">DSG Mekatronik Tamiri</li>
          <li class="text-white/80">DSG Şanzıman Tamiri</li>
          <li class="text-white/80">Motor Tamiri</li>
          <li class="text-white/80">Periyodik Bakım</li>
          <li class="text-white/80">Fren Sistemi</li>
        </ul>
      </div>

      {/* Contact Info */}
      <div>
        <h3 class="text-xl font-bold mb-6">İletişim Bilgileri</h3>
        <ul class="space-y-4">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-cyan-light flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            <span class="text-white/80 text-sm">
              {SITE_CONFIG.address.street}<br/>
              {SITE_CONFIG.address.city} / {SITE_CONFIG.address.state}
            </span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-cyan-light" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
            </svg>
            <a href={`tel:+90${SITE_CONFIG.phone.replace(/\s/g, '')}`} class="text-white/80 hover:text-cyan-light transition-colors">
              {SITE_CONFIG.phone}
            </a>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-cyan-light" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
            </svg>
            <a href={`mailto:${SITE_CONFIG.email}`} class="text-white/80 hover:text-cyan-light transition-colors text-sm">
              {SITE_CONFIG.email}
            </a>
          </li>
        </ul>

        {/* Working Hours */}
        <div class="mt-6">
          <h4 class="font-semibold mb-2">Çalışma Saatleri</h4>
          <p class="text-white/80 text-sm">{SITE_CONFIG.workingHours.weekdays}</p>
          <p class="text-white/80 text-sm">{SITE_CONFIG.workingHours.weekend}</p>
        </div>
      </div>
    </div>

    {/* Bottom Bar */}
    <div class="border-t border-white/10 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-white/60 text-sm text-center md:text-left">
        © {new Date().getFullYear()} {SITE_CONFIG.name}. Tüm hakları saklıdır.
      </p>
      <div class="flex gap-6 text-sm text-white/60">
        <a href="/gizlilik-politikasi" class="hover:text-cyan-light transition-colors">
          Gizlilik Politikası
        </a>
        <a href="/kullanim-kosullari" class="hover:text-cyan-light transition-colors">
          Kullanım Koşulları
        </a>
      </div>
    </div>
  </div>
</footer>
