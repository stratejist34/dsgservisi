---
import { getCollection } from 'astro:content';
import { isPublishedPost, sortPostsByDate } from '@utils/content';

// Blog yazılarını Content Collections'dan çekiyoruz
const allPosts = await getCollection('blog', ({ data }) => isPublishedPost(data));

// Son 4 yazıyı tarih sırasına göre al
const recentPosts = sortPostsByDate(allPosts).slice(0, 4);

// URL oluşturma fonksiyonu
const getPostUrl = (slug: string) => {
  return `/${slug}`;
};
---

<section class="relative py-24 bg-[#0f172a] border-t border-white/5 overflow-hidden">
  {/* Background Elements */}
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-amber-500/20 to-transparent"></div>
    <div class="absolute inset-0 opacity-[0.02]" 
         style="background-image: linear-gradient(#fff 1px, transparent 1px), linear-gradient(90deg, #fff 1px, transparent 1px); background-size: 30px 30px;">
    </div>
  </div>

  <div class="container relative z-10">
    {/* Section Header - Tech Style */}
    <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6" data-reveal>
      <div>
        <div class="flex items-center gap-3 mb-3">
          <span class="w-2 h-2 rounded-full bg-amber-500 animate-pulse"></span>
          <span class="text-amber-500 font-mono text-xs tracking-widest uppercase">System Knowledge Base</span>
        </div>
        <h2 class="text-3xl md:text-4xl font-display font-bold text-white">
          DSG BİLGİ MERKEZİ
        </h2>
      </div>
      
      <a href="/blog" class="group flex items-center gap-2 text-sm font-mono text-slate-400 hover:text-amber-500 transition-colors">
        <span>VIEW_ALL_LOGS</span>
        <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
      </a>
    </div>

    {/* Blog Grid - Technical Cards */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {recentPosts.map((post, index) => {
        const postUrl = getPostUrl(post.slug);
        const featuredImage = post.data.featuredImage || `/images/blog/${post.slug}.jpg`;
        const description = post.data.description || '';
        const date = new Date(post.data.pubDate).toLocaleDateString('tr-TR', { year: 'numeric', month: '2-digit', day: '2-digit' });
        
        return (
          <a 
            href={postUrl} 
            class="group relative h-full"
            data-reveal 
            data-stagger-index={index}
          >
            <div class="relative h-full bg-slate-800/30 border border-white/10 rounded-lg overflow-hidden transition-all duration-300 hover:border-amber-500/30 hover:bg-slate-800/50 group-hover:shadow-[0_0_30px_-10px_rgba(245,158,11,0.1)]">
              
              {/* Image Container */}
              <div class="relative h-40 overflow-hidden border-b border-white/5">
                <div class="absolute inset-0 bg-slate-900/20 group-hover:bg-transparent transition-colors duration-500 z-10"></div>
                <img 
                  src={featuredImage} 
                  alt={post.data.imageAlt || post.data.title}
                  class="w-full h-full object-cover transform transition-transform duration-700 group-hover:scale-110 filter grayscale-[30%] group-hover:grayscale-0"
                  loading="lazy"
                />
                
                {/* Date Badge */}
                <div class="absolute top-2 right-2 z-20 bg-black/60 backdrop-blur-md border border-white/10 px-2 py-1 rounded text-[10px] font-mono text-amber-500">
                  {date}
                </div>
              </div>

              {/* Content */}
              <div class="p-5">
                <div class="text-[10px] font-mono text-slate-500 mb-2 uppercase tracking-wider">
                  ID: LOG_{String(index + 1).padStart(3, '0')}
                </div>
                
                <h3 class="text-lg font-display font-bold text-white mb-3 line-clamp-2 group-hover:text-amber-500 transition-colors leading-snug">
                  {post.data.title}
                </h3>
                
                <p class="text-sm text-slate-400 line-clamp-2 mb-4 leading-relaxed">
                  {description}
                </p>
                
                <div class="flex items-center text-amber-500/70 text-xs font-mono uppercase tracking-wider group-hover:text-amber-500 transition-colors">
                  <span class="mr-2">Read_Entry</span>
                  <div class="h-px w-4 bg-amber-500/50 group-hover:w-8 transition-all"></div>
                </div>
              </div>
            </div>
          </a>
        );
      })}
    </div>
  </div>
</section>
