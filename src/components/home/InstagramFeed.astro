  { id: '2', image: '/images/instagram/2.jpg', url: 'https://www.instagram.com/asyildizlar/', caption: 'DSG Mekatronik Tamiri' },
  { id: '3', image: '/images/instagram/3.jpg', url: 'https://www.instagram.com/asyildizlar/', caption: 'Araç Bakım Servisi' },
