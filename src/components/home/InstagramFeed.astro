---
const instagramPosts = [
  { id: '1', image: '/images/instagram/1.avif', url: 'https://www.instagram.com/asyildizlar/', caption: 'Yıldızlar Grup DSG Servisi' },
  { id: '3', image: '/images/instagram/3.avif', url: 'https://www.instagram.com/asyildizlar/', caption: 'Araç Bakım Servisi' },
  { id: '4', image: '/images/instagram/4.avif', url: 'https://www.instagram.com/asyildizlar/', caption: 'Profesyonel Ekip' },
  { id: '5', image: '/images/instagram/5.avif', url: 'https://www.instagram.com/asyildizlar/', caption: 'Motor Onarımı' },
  { id: '7', image: '/images/instagram/7.avif', url: 'https://www.instagram.com/asyildizlar/', caption: 'İstanbul Servis' },
  { id: '8', image: '/images/instagram/8.avif', url: 'https://www.instagram.com/asyildizlar/', caption: 'Yıldızlar Grup' },
  { id: '10', image: '/images/instagram/10.avif', url: 'https://www.instagram.com/asyildizlar/', caption: 'Mekanik Servis' },
  { id: '12', image: '/images/instagram/12.avif', url: 'https://www.instagram.com/asyildizlar/', caption: 'Servis Hizmeti' },
  { id: '13', image: '/images/instagram/13.avif', url: 'https://www.instagram.com/asyildizlar/', caption: 'Teknik Ekip' },
];
---

<section class="relative bg-slate-950 border-t border-white/10 py-12 overflow-hidden" id="instagram-feed">
  {/* Background Grid */}
  <div class="absolute inset-0 opacity-[0.05] pointer-events-none" 
       style="background-image: linear-gradient(#fff 1px, transparent 1px), linear-gradient(90deg, #fff 1px, transparent 1px); background-size: 20px 20px;">
  </div>

  <div class="container relative z-10 mb-8">
    <div class="flex items-center justify-between" data-animate>
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-purple-600 to-orange-500 flex items-center justify-center shadow-lg">
          <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
        </div>
        <div>
          <div class="text-xs font-mono text-slate-500 uppercase tracking-wider">Social Feed</div>
          <a href="https://www.instagram.com/asyildizlar/" target="_blank" class="text-white font-bold hover:text-amber-500 transition-colors">@asyildizlar</a>
        </div>
      </div>
      
      <div class="flex items-center gap-2 text-xs font-mono text-green-500">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
        </span>
        LIVE STREAM
      </div>
    </div>
  </div>

  {/* Carousel */}
  <div class="instagram-carousel-container border-y border-white/5 bg-black/20" data-animate>
    <div class="instagram-carousel-wrapper">
      {instagramPosts.map((post) => (
        <div class="instagram-slide border-r border-white/5">
          <a
            href={post.url}
            target="_blank"
            rel="noopener noreferrer"
            class="block relative aspect-square group overflow-hidden"
          >
            <img
              src={post.image}
              alt={post.caption}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 filter grayscale-[20%] group-hover:grayscale-0"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
              <span class="text-white font-mono text-xs border border-white/30 px-2 py-1 rounded bg-black/50 backdrop-blur-sm">
                VIEW_POST
              </span>
            </div>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .instagram-carousel-container {
    position: relative;
    overflow: hidden;
  }

  .instagram-carousel-wrapper {
    display: flex;
    animation: instagram-scroll 30s linear infinite;
  }

  .instagram-slide {
    flex-shrink: 0;
    width: 14.285714%;
    padding: 0;
  }

  .instagram-carousel-container:hover .instagram-carousel-wrapper {
    animation-play-state: paused;
  }

  @keyframes instagram-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-57.142857%); }
  }

  @media (max-width: 768px) {
    .instagram-slide {
      width: 33.333333%;
    }
  }
</style>
