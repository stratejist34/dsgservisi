<!-- CTA Section - White Background -->
<section class="section bg-white">
  <div class="container">
    <div class="max-w-4xl mx-auto text-center" data-animate>
      <h3 class="text-3xl md:text-4xl font-display font-bold text-navy mb-4">
        Aracınız İçin En İyi Hizmeti Alın
      </h3>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto" data-animate>
        Uzman ekibimizle tanışın ve aracınızın ihtiyaç duyduğu profesyonel bakımı alın
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center" data-stagger-children data-stagger-step="90">
        <a
          href="/iletisim"
          class="btn btn-primary btn-lg group"
          data-animate
        >
          <svg class="w-5 h-5 mr-2 group-hover:animate-ring" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
          </svg>
          Randevu Alın
        </a>
        <a
          href="/hakkimizda"
          class="btn bg-navy text-white hover:bg-navy-600 btn-lg"
          data-animate
        >
          Hakkımızda
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

