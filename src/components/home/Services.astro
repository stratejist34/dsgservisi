---
import { SERVICES } from '@utils/constants';
import { Droplet, Settings, Wrench, Snowflake, Zap, Cog } from 'lucide-astro';
---

<section class="relative bg-gradient-to-b from-navy via-navy-700 to-navy overflow-hidden py-8 md:py-12">
  {/* Simplified background (no animated lamp) */}

  {/* Animated Grid Pattern */}
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%231a9cb0' fill-opacity='0.4'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <div class="container relative z-10">
    {/* Section Title */}
    <div class="text-center mb-8 md:mb-10" data-reveal>
      <div class="inline-block mb-3 px-6 py-2 bg-primary/10 rounded-full border border-primary/30">
        <span class="text-cyan font-semibold text-sm uppercase tracking-wider">Profesyonel Servis</span>
      </div>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-black text-white mb-4 leading-tight">
        Premium <span class="text-gradient">Hizmetlerimiz</span>
      </h2>
      <p class="text-xl text-white/80 max-w-3xl mx-auto leading-relaxed">
        15 yƒ±llƒ±k deneyimimiz ve uzman kadromuzla aracƒ±nƒ±za √∂zel √ß√∂z√ºmler sunuyoruz
      </p>
    </div>

    {/* Premium Cards Grid - 4 columns x 2 rows */}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8 max-w-7xl mx-auto mb-8 md:mb-10">
      {SERVICES.map((service, index) => (
        <a
          href="/iletisim"
          class="group relative"
          data-reveal
        >
          {/* Glassmorphism Card */}
          <div class="relative h-full bg-gradient-to-br from-white/10 to-white/5 rounded-2xl overflow-hidden border border-white/20 transition-transform duration-300 hover:-translate-y-1 premium-shine">
            
            {/* Image with Overlay - 16:9 format */}
              <div class="relative aspect-video overflow-hidden rounded-t-2xl">
              <picture>
                <source 
                  type="image/avif"
                  srcset={`${service.image.replace('.avif', '-320.avif')} 320w, ${service.image.replace('.avif', '-480.avif')} 480w, ${service.image.replace('.avif', '-640.avif')} 640w`}
                  sizes="(min-width: 1024px) 25vw, (min-width: 640px) 50vw, 100vw"
                />
                <source 
                  type="image/webp"
                  srcset={`${service.image.replace('.avif', '-320.webp')} 320w, ${service.image.replace('.avif', '-480.webp')} 480w, ${service.image.replace('.avif', '-640.webp')} 640w`}
                  sizes="(min-width: 1024px) 25vw, (min-width: 640px) 50vw, 100vw"
                />
                <img
                  src={service.image.replace('.avif', '-480.avif')}
                  alt={service.title}
                  class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
                  loading="lazy"
                  width="640"
                  height="360"
                  sizes="(min-width: 1024px) 25vw, (min-width: 640px) 50vw, 100vw"
                  decoding="async"
                />
              </picture>
              {/* Dark Gradient Overlay - Ba≈ülƒ±klar i√ßin daha koyu */}
              <div class="absolute inset-0 bg-gradient-to-t from-navy/95 via-navy/50 to-transparent"></div>
              
              {/* Icon Badge - Cam efekti */}
              <div class="absolute top-4 right-4 w-12 h-12 bg-gradient-to-r from-primary/20 via-cyan/20 to-primary/20 border-2 border-cyan/30 rounded-xl flex items-center justify-center transform transition-transform duration-300 group-hover:scale-110 z-20">
                {service.icon === 'üõ¢Ô∏è' && <Droplet class="w-6 h-6 text-white" stroke-width={2.5} />}
                {service.icon === '‚öôÔ∏è' && <Settings class="w-6 h-6 text-white" stroke-width={2.5} />}
                {service.icon === 'üîß' && <Wrench class="w-6 h-6 text-white" stroke-width={2.5} />}
                {service.icon === 'üî©' && <Cog class="w-6 h-6 text-white" stroke-width={2.5} />}
                {service.icon === '‚ùÑÔ∏è' && <Snowflake class="w-6 h-6 text-white" stroke-width={2.5} />}
                {service.icon === '‚ö°' && <Zap class="w-6 h-6 text-white" stroke-width={2.5} />}
              </div>
              
              {/* Content - Resmin √ºzerine bindirilmi≈ü, alt tarafa yaslanmƒ±≈ü */}
              <div class="absolute bottom-0 left-0 right-0 p-4 pb-2 z-10 flex flex-col justify-end">
                <h3 class="text-base md:text-lg font-display font-bold text-white mb-1 group-hover:text-cyan transition-colors duration-300">
                  {service.title}
                </h3>
                <p class="text-white/90 text-xs leading-relaxed line-clamp-2 transition-colors">
                  {service.description}
                </p>
              </div>
            </div>

          </div>
        </a>
      ))}
    </div>

    {/* CTA Button */}
    <div class="text-center pt-4" data-animate>
      <a 
        href="/hizmetlerimiz" 
        class="group inline-flex items-center gap-3 px-10 py-5 bg-gradient-to-r from-primary via-cyan to-primary rounded-2xl font-display font-bold text-lg text-white premium-shine relative overflow-hidden border-2 border-white/20 transition-transform duration-500 hover:scale-105"
        style="background-size: 200% 100%;"
      >
        <span class="relative z-10">T√ºm Hizmetleri Ke≈üfedin</span>
        <svg class="w-6 h-6 relative z-10 transform group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* Removed lamp and slide animations for performance */
</style>

