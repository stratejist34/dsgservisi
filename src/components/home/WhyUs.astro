---
import { WHY_US } from '@utils/constants';
---

<section class="section relative bg-gradient-to-br from-navy via-navy-600 to-navy overflow-hidden">
  {/* Subtle static pattern */}
  <div class="absolute inset-0 opacity-8">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%231a9cb0\' fill-opacity=\'0.3\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  {/* Single lightweight orb */}
  <div class="absolute top-20 left-10 w-72 h-72 bg-primary/25 rounded-full blur-xl"></div>

  {/* Stars removed for performance */}

  <div class="container relative z-10">
    <div class="section-title" data-reveal>
      <h2 class="font-display font-bold text-white mb-4">
        Neden Bizi Seçmelisiniz?
      </h2>
      <p class="text-xl text-white/90 max-w-3xl mx-auto">
        15 yıllık tecrübemiz ve uzman kadromuzla aracınız güvende
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {WHY_US.map((item, index) => (
        <div class="group relative" data-reveal>
          <div class="relative bg-gradient-to-r from-primary/20 via-cyan/20 to-primary/20 border-2 border-cyan/30 rounded-2xl p-8 h-full transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl hover:border-cyan overflow-hidden premium-shine">
            <div class="mb-6 relative z-10">
              <div class="w-16 h-16 rounded-lg bg-gradient-to-br from-primary to-cyan flex items-center justify-center text-4xl transform transition-transform duration-300 group-hover:scale-110 group-hover:rotate-6">
                {item.icon}
              </div>
            </div>
            <h3 class="text-2xl font-display font-bold text-white mb-4 group-hover:text-cyan transition-colors relative z-10">
              {item.title}
            </h3>
            <p class="text-white/80 leading-relaxed relative z-10">
              {item.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- CTA Section - White Background -->
<section class="section bg-white">
  <div class="container">
    <div class="max-w-4xl mx-auto text-center">
      <h3 class="text-3xl md:text-4xl font-display font-bold text-navy mb-4">
        Aracınız İçin En İyi Hizmeti Alın
      </h3>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Uzman ekibimizle tanışın ve aracınızın ihtiyaç duyduğu profesyonel bakımı alın
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/iletisim"
          class="btn btn-primary btn-lg group"
        >
          <svg class="w-5 h-5 mr-2 group-hover:animate-ring" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
          </svg>
          Randevu Alın
        </a>
        <a
          href="/hakkimizda"
          class="btn bg-navy text-white hover:bg-navy-600 btn-lg"
        >
          Hakkımızda
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Removed star and slide animations per performance guidelines */
</style>

