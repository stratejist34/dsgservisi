---
import { getCollection } from 'astro:content';
import BlogLayout from '@layouts/BlogLayout.astro';
import BlogCard from '@components/blog/BlogCard.astro';
import TableOfContents from '@components/blog/TableOfContents.tsx';
import { findRelatedPosts, calculateReadingTime, extractPriceRangeFromHtml, extractFaqsFromHtml, getCategorySlugs, isPublishedPost } from '@utils/content';
import { getBlogFeaturedImage } from '@utils/content';

export async function getStaticPaths() {
  // Build time'ı logla (debug için)
  const buildTime = new Date();
  
  // Yayınlanmış yazılar için route oluştur
  const publishedPosts = await getCollection('blog', ({ data }) => isPublishedPost(data));
  
  // Gelecek tarihli yazılar için de route oluştur (preview için, noindex ile)
  const allPosts = await getCollection('blog', ({ data }) => !data.draft);
  const scheduledPosts = allPosts.filter((post) => {
    const publishDate = post.data.publishDate instanceof Date 
      ? post.data.publishDate 
      : new Date(post.data.publishDate);
    return publishDate > new Date();
  });
  
  // Kategori slug'larını utility'den al
  const categorySlugs = new Set(getCategorySlugs());
  
  // Yayınlanmış yazılar (kategori slug'ı olmayanlar)
  const publishedRoutes = publishedPosts
    .filter((post) => !categorySlugs.has(post.slug))
    .map((post) => ({
      params: { slug: post.slug },
      props: { post, isPublished: true },
    }));
  
  // Gelecek tarihli yazılar (preview için, kategori slug'ı olmayanlar)
  const scheduledRoutes = scheduledPosts
    .filter((post) => !categorySlugs.has(post.slug))
    .map((post) => ({
      params: { slug: post.slug },
      props: { post, isPublished: false },
    }));
  
  return [...publishedRoutes, ...scheduledRoutes];
}

const { slug } = Astro.params;
const { post, isPublished } = Astro.props || {};

// Kategori slug kontrolü - eğer kategori slug'ı ise [category].astro bunu handle edecek
if (slug && getCategorySlugs().includes(slug.toLowerCase())) {
  return Astro.redirect(`/${slug.toLowerCase()}`, 301);
}

// Post kontrolü - eğer post yoksa blog'a yönlendir
if (!post) {
  return Astro.redirect('/blog', 404);
}

const { Content } = await post.render();
const data = post.data;

// Runtime'da gerçek yayın durumunu kontrol et
const publishDate = data.publishDate instanceof Date 
  ? data.publishDate 
  : new Date(data.publishDate);
const actuallyPublished = isPublishedPost(data);

// Sadece yayınlanmış yazıları al (ilgili yazılar için - SEO için kritik!)
const allPostsForRelated = await getCollection('blog', ({ data }) => !data.draft);
const publishedPostsForRelated = allPostsForRelated.filter(post => isPublishedPost(post.data));
const relatedPosts = findRelatedPosts(post, publishedPostsForRelated, 3);

// Okuma süresini hesapla
const readingTime = data.readingTime || calculateReadingTime(Content.toString());

// Tarih formatı
const formattedDate = publishDate.toLocaleDateString('tr-TR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const html = Content.toString();
const extractedService = extractPriceRangeFromHtml(html);
const extractedFaqs = extractFaqsFromHtml(html);
---

<BlogLayout post={post} extractedService={extractedService} extractedFaqs={extractedFaqs} isPublished={actuallyPublished}>
  <article class="py-8 bg-transparent">
    <div class="container mx-auto px-4 py-8">
      {/* items-start KALDIRILDI - Sütunlar stretch olsun */}
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        
        <!-- Sol: İçerik -->
        <div class="lg:col-span-2 min-w-0">
          <!-- Breadcrumb -->
          <nav class="text-sm text-slate-400 mb-6">
            <a href="/" class="hover:text-amber-500 transition-colors">Ana Sayfa</a>
            <span class="mx-2">/</span>
            <a href="/blog" class="hover:text-amber-500 transition-colors">Blog</a>
            <span class="mx-2">/</span>
            <span class="text-slate-200 font-medium">{data.title}</span>
          </nav>

          <!-- Header -->
          <header class="mb-8">
            {data.category && (
              <div class="inline-flex items-center gap-2 bg-amber-500/10 border border-amber-500/20 text-amber-500 px-4 py-1.5 rounded-full text-xs font-bold uppercase tracking-wider mb-6">
                <span class="w-1.5 h-1.5 rounded-full bg-amber-500 animate-pulse"></span>
                {data.category}
              </div>
            )}

            <!-- Title - TEXT-WHITE ZORUNLU -->
            <h1 class="font-display font-bold text-white mb-6 text-3xl md:text-4xl lg:text-5xl leading-tight" style="color: #ffffff !important;">
              {data.title}
            </h1>

            <div class="flex flex-wrap items-center gap-6 text-sm text-slate-400 mb-8 pb-8 border-b border-white/10">
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                <span>{data.author || 'DSG Servisi'}</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                <time datetime={publishDate.toISOString()}>{formattedDate}</time>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                <span>{readingTime} dakika okuma</span>
              </div>
            </div>

            {data.featuredImage && (
              <div class="mb-10 rounded-2xl overflow-hidden shadow-2xl border border-white/10">
                <img
                  src={getBlogFeaturedImage(post)}
                  alt={data.imageAlt || data.title}
                  class="w-full h-auto object-cover"
                  loading="eager"
                  width="1200"
                  height="675"
                />
              </div>
            )}
          </header>

          <!-- Blog İçeriği -->
          <div class="prose prose-lg w-full max-w-none" id="article-content">
            <Content />
          </div>

          <!-- Author Box -->
          <div class="mt-12 p-6 bg-slate-800/50 rounded-2xl border border-white/10">
            <div class="flex items-start gap-4">
              <div class="w-14 h-14 bg-amber-500 rounded-full flex items-center justify-center text-white font-bold text-xl flex-shrink-0">
                {(data.author || 'DSG')[0]}
              </div>
              <div>
                <h3 class="font-display font-bold text-white mb-1">{data.author || 'DSG Servisi'}</h3>
                <p class="text-slate-400 text-sm leading-relaxed">
                  DSG şanzıman ve mekatronik sistemleri konusunda uzman ekibimizden bilgilendirici içerikler.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Sağ: İçindekiler -->
        <!-- Grid Column (Static) -->
        <div class="hidden lg:block lg:col-span-1 lg:pl-4">
          <!-- Sticky REMOVED per user request -->
          <div>
             <TableOfContents client:load contentId="article-content" />
          </div>
        </div>
      </div>
    </div>
  </article>

  <!-- Related Posts -->
  {relatedPosts.length > 0 && (
    <section class="section bg-[#0f172a] border-t border-white/10 relative z-10">
      <div class="container max-w-7xl">
        <div class="flex items-center gap-3 mb-10">
          <span class="w-1 h-8 bg-amber-500 rounded-full"></span>
          <h2 class="font-display font-bold text-white text-2xl md:text-3xl">
            İlgili Yazılar
          </h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {relatedPosts.map((relatedPost, index) => (
            <BlogCard post={relatedPost} index={index} size="rect-regular" />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="section relative overflow-hidden py-24 border-t border-white/5">
    <div class="absolute inset-0 bg-gradient-to-b from-slate-900 to-black pointer-events-none"></div>
    
    <div class="container max-w-4xl relative z-10 text-center">
      <div class="inline-block p-3 rounded-full bg-amber-500/10 mb-6 border border-amber-500/20">
        <svg class="w-8 h-8 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
      </div>
      
      <h2 class="font-display font-bold mb-6 text-3xl md:text-5xl text-white">
        Profesyonel <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-400 to-amber-600">DSG Servis</span> Hizmeti
      </h2>
      
      <p class="text-xl text-slate-400 mb-10 leading-relaxed max-w-2xl mx-auto">
        DSG şanzıman ve mekatronik konusunda uzman ekibimizle tanışın. 
        15 yıllık deneyim ve 6500+ mutlu müşteri ile güvenilir çözümler.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-6 justify-center w-full max-w-2xl mx-auto sm:max-w-none items-center">
        <a href="/iletisim" class="w-full sm:w-64 inline-flex items-center justify-center px-8 py-5 rounded-xl bg-amber-500 text-white text-xl font-bold shadow-[0_0_20px_rgba(245,158,11,0.3)] hover:shadow-[0_0_30px_rgba(245,158,11,0.5)] hover:bg-amber-400 hover:-translate-y-1 transition-all duration-300 border-none whitespace-nowrap" style="background-color: #f59e0b !important; color: white !important;">
          Randevu Alın
        </a>
        <a href="/hizmetlerimiz" class="w-full sm:w-64 inline-flex items-center justify-center px-8 py-5 rounded-xl bg-transparent border-2 border-white/30 text-white text-xl font-bold hover:bg-white hover:text-slate-900 hover:border-white hover:-translate-y-1 transition-all duration-300 whitespace-nowrap backdrop-blur-sm" style="background-color: transparent !important; border-color: rgba(255,255,255,0.3) !important; color: white !important;">
          Hizmetlerimiz
        </a>
      </div>
    </div>
  </section>
</BlogLayout>
