---
import { getCollection } from 'astro:content';
import BlogLayout from '@layouts/BlogLayout.astro';
import BlogCard from '@components/blog/BlogCard.astro';
import TableOfContents from '@components/blog/TableOfContents.tsx';
import { findRelatedPosts, calculateReadingTime, extractPriceRangeFromHtml, extractFaqsFromHtml, getCategorySlugs, isPublishedPost } from '@utils/content';
import { getBlogFeaturedImage } from '@utils/content';

export async function getStaticPaths() {
  // Sadece yayınlanmış yazılar için route oluştur (gelecek tarihli yazılar preview sayfasında görünür)
  const publishedPosts = await getCollection('blog', ({ data }) => isPublishedPost(data));
  
  // Kategori slug'larını utility'den al
  const categorySlugs = new Set(getCategorySlugs());
  
  // Sadece kategori slug'ı OLMAYAN blog postları için route oluştur
  return publishedPosts
    .filter((post) => !categorySlugs.has(post.slug))
    .map((post) => ({
      params: { slug: post.slug },
      props: { post, isPublished: true },
    }));
}

const { slug } = Astro.params;
const { post, isPublished } = Astro.props;

// Kategori slug kontrolü - eğer kategori slug'ı ise [category].astro bunu handle edecek
// Bu dosyada kategori slug'ları için route oluşturmadığımız için bu kontrol gereksiz ama güvenlik için
if (slug && getCategorySlugs().includes(slug.toLowerCase())) {
  // Bu bir kategori slug'ı - bu route'a gelmemeli ama gelirse category sayfasına yönlendir
  return Astro.redirect(`/${slug.toLowerCase()}`, 301);
}

// Post kontrolü - eğer post yoksa blog'a yönlendir
if (!post) {
  return Astro.redirect('/blog', 404);
}

// Artık sadece yayınlanmış yazılar buraya gelir, preview uyarısı gerekmez
const showPreviewWarning = false;
const { Content } = await post.render();
const data = post.data;

// Sadece yayınlanmış yazıları al (ilgili yazılar için - SEO için kritik!)
const allPostsForRelated = await getCollection('blog', ({ data }) => !data.draft);
const publishedPostsForRelated = allPostsForRelated.filter(post => isPublishedPost(post.data));
const relatedPosts = findRelatedPosts(post, publishedPostsForRelated, 3);

// Okuma süresini hesapla
const readingTime = data.readingTime || calculateReadingTime(Content.toString());

// Tarih formatı
const publishDate = data.publishDate instanceof Date 
  ? data.publishDate 
  : new Date(data.publishDate);
const formattedDate = publishDate.toLocaleDateString('tr-TR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
// İçerikten otomatik fiyat bilgisi ve FAQ çıkar (şemalar için)
const html = Content.toString();
const extractedService = extractPriceRangeFromHtml(html);
const extractedFaqs = extractFaqsFromHtml(html);
---

<BlogLayout post={post} extractedService={extractedService} extractedFaqs={extractedFaqs} isPublished={isPublished}>
  <Fragment slot="head">
    {/* TOC Sticky ve aktif link stilleri */}
    <style is:inline>
      
      /* TOC aktif link stilleri */
      aside nav a.toc-active {
        background-color: rgb(26 156 176 / 0.1) !important;
        border-left-color: rgb(26 156 176) !important;
        color: rgb(26 156 176) !important;
        font-weight: 600 !important;
      }
      
      /* TOC hover stili */
      aside nav a:hover:not(.toc-active) {
        background-color: rgb(26 156 176 / 0.05) !important;
        border-left-color: rgb(26 156 176) !important;
      }
    </style>
  </Fragment>
  <article class="py-12 bg-white" style="overflow: visible;">
    <div class="container max-w-7xl" style="overflow: visible;">
      <!-- Breadcrumb -->
      <nav class="flex items-center text-sm text-gray-600 mb-8 flex-wrap">
        <a href="/" class="hover:text-primary transition-colors">Ana Sayfa</a>
        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <a href="/blog" class="hover:text-primary transition-colors">Blog</a>
        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-gray-400 truncate">{data.title}</span>
      </nav>

      <!-- Preview Uyarısı (Gelecek Tarihli Yazılar İçin) -->
      {showPreviewWarning && (
        <div class="mb-8 p-4 bg-yellow-100 border-l-4 border-yellow-500 rounded-lg">
          <div class="flex items-center gap-2">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <div>
              <h2 class="text-lg font-bold text-yellow-800">Önizleme Modu</h2>
              <p class="text-sm text-yellow-700">
                Bu yazı henüz yayınlanmamıştır. Yayınlanma tarihi: {formattedDate}
                <br />
                <a href="/blog/preview" class="underline font-semibold">Tüm planlanmış yazıları görmek için tıklayın</a>
              </p>
            </div>
          </div>
        </div>
      )}

      <!-- Header -->
      <header class="mb-8 blog-article-header" style="position: static !important; top: auto !important;">
        <!-- Title -->
        <h1 class="font-display font-bold text-navy mb-4 text-3xl md:text-4xl lg:text-5xl">
          {data.title}
        </h1>
      </header>

      <!-- Content with TOC -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start relative">
        <!-- Sol: İçerik -->
        <div class="lg:col-span-2">
          {data.featuredImage && (
            <div class="mb-8 rounded-2xl overflow-hidden shadow-2xl">
              <img
                src={getBlogFeaturedImage(post)}
                alt={data.imageAlt || data.title}
                class="w-full h-auto object-cover"
                loading="eager"
                width="1200"
                height="675"
              />
            </div>
          )}
          <div class="prose prose-lg w-full max-w-none prose-headings:text-navy prose-headings:font-display prose-a:text-primary prose-a:no-underline hover:prose-a:underline prose-strong:text-navy prose-img:rounded-xl prose-img:shadow-lg prose-headings:scroll-mt-24" id="article-content">
            <Content />
          </div>

          <!-- Tags - Yazının Sonu -->
          {data.tags && data.tags.length > 0 && (
            <div class="mt-12 pt-8 border-t border-gray-200">
              <div class="flex flex-wrap gap-2">
                {data.tags.map((tag) => (
                  <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-xs font-medium">
                    #{tag}
                  </span>
                ))}
              </div>
            </div>
          )}
        </div>

        <!-- Sağ: İçindekiler (Table of Contents) -->
        <aside class="lg:col-span-1 toc-sticky lg:pl-2 xl:pl-4" style="position: -webkit-sticky; position: sticky; top: 5rem; align-self: start; display: block; visibility: visible; opacity: 1;">
          <TableOfContents client:load contentId="article-content" />
        </aside>
      </div>

      <!-- Author Box -->
      <div class="mt-12 p-6 bg-gradient-to-br from-gray-50 to-white rounded-2xl border border-gray-200">
        <div class="flex items-start gap-4">
          {data.authorImage ? (
            <img
              src={data.authorImage}
              alt={data.author || 'Yazar'}
              class="w-16 h-16 rounded-full object-cover"
            />
          ) : (
            <div class="w-16 h-16 bg-gradient-to-br from-primary to-cyan rounded-full flex items-center justify-center text-white font-bold text-xl">
              {(data.author || 'DSG')[0]}
            </div>
          )}
          <div>
            <h3 class="font-display font-bold text-navy mb-1">{data.author || 'DSG Servisi'}</h3>
            <p class="text-gray-600 text-sm">
              DSG şanzıman ve mekatronik sistemleri konusunda uzman ekibimizden bilgilendirici içerikler.
            </p>
          </div>
        </div>
      </div>
    </div>
  </article>

  <!-- Related Posts -->
  {relatedPosts.length > 0 && (
    <section class="section bg-gradient-to-b from-gray-50 to-white">
      <div class="container max-w-7xl">
        <h2 class="font-display font-bold text-navy mb-8 text-2xl md:text-3xl">
          İlgili Yazılar
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {relatedPosts.map((relatedPost, index) => (
            <BlogCard post={relatedPost} index={index} size="rect-regular" />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="section bg-gradient-to-br from-navy to-navy-700 text-white">
    <div class="container max-w-7xl">
      <div class="text-center">
        <h2 class="font-display font-bold mb-6 text-2xl md:text-3xl">
          Profesyonel DSG Servisi Hizmeti
        </h2>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          DSG şanzıman ve mekatronik konusunda uzman ekibimizle tanışın. 
          15 yıllık deneyim ve 6500+ mutlu müşteri ile güvenilir çözümler.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/iletisim" class="btn bg-gradient-to-r from-primary to-cyan text-white hover:shadow-lg hover:shadow-primary/50 transition-all">
            Randevu Alın
          </a>
          <a href="/hizmetlerimiz" class="btn bg-white text-navy hover:bg-gray-100">
            Hizmetlerimiz
          </a>
        </div>
      </div>
    </div>
  </section>
</BlogLayout>

