---
import BaseLayout from '@layouts/BaseLayout.astro';
import { SITE_CONFIG } from '@utils/constants';

const seo = {
  title: 'İletişim',
  description: 'Bize ulaşın, randevu alın. İstanbul Büyükçekmece\'de DSG şanzıman ve mekatronik servisi.',
  url: '/iletisim',
};
---

<BaseLayout seo={seo}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-navy to-navy-700 text-white py-20">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="font-display font-bold mb-6">
          İletişim
        </h1>
        <p class="text-xl text-gray-300 leading-relaxed">
          Bize ulaşın, randevunuzu alın veya sorunuzu sorun
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section bg-white">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="font-display font-bold text-navy mb-8">
            İletişim Bilgileri
          </h2>

          <div class="space-y-6">
            <!-- Phone -->
            <div class="flex items-start">
              <div class="w-12 h-12 bg-gradient-to-br from-primary to-cyan rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="font-bold text-navy mb-1">Telefon</h3>
                <a href={`tel:${SITE_CONFIG.phoneFormatted}`} class="text-lg text-primary hover:text-cyan transition-colors">
                  {SITE_CONFIG.phone}
                </a>
                <p class="text-sm text-gray-600 mt-1">{SITE_CONFIG.workingHours.weekdays}</p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start">
              <div class="w-12 h-12 bg-gradient-to-br from-primary to-cyan rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="font-bold text-navy mb-1">E-posta</h3>
                <a href={`mailto:${SITE_CONFIG.email}`} class="text-lg text-primary hover:text-cyan transition-colors break-all">
                  {SITE_CONFIG.email}
                </a>
              </div>
            </div>

            <!-- Address -->
            <div class="flex items-start">
              <div class="w-12 h-12 bg-gradient-to-br from-primary to-cyan rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="font-bold text-navy mb-1">Adres</h3>
                <p class="text-gray-700">
                  {SITE_CONFIG.address.street}<br />
                  {SITE_CONFIG.address.city} / {SITE_CONFIG.address.state}
                </p>
                <a
                  href={`https://www.google.com/maps/search/?api=1&query=${SITE_CONFIG.coordinates.latitude},${SITE_CONFIG.coordinates.longitude}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center text-primary hover:text-cyan transition-colors mt-2"
                >
                  Haritada Görüntüle
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </a>
              </div>
            </div>

            <!-- Social Media -->
            <div class="flex items-start">
              <div class="w-12 h-12 bg-gradient-to-br from-primary to-cyan rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="font-bold text-navy mb-2">Sosyal Medya</h3>
                <div class="flex gap-3">
                  <a
                    href={SITE_CONFIG.socialMedia.instagram}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 bg-gradient-to-br from-pink-500 to-purple-600 rounded-lg flex items-center justify-center text-white hover:scale-110 transition-transform"
                    aria-label="Instagram"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                    </svg>
                  </a>
                  <a
                    href={SITE_CONFIG.socialMedia.facebook}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center text-white hover:scale-110 transition-transform"
                    aria-label="Facebook"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                  </a>
                  <a
                    href={`https://wa.me/${SITE_CONFIG.phoneFormatted.replace(/\s+/g, '')}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center text-white hover:scale-110 transition-transform"
                    aria-label="WhatsApp"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Working Hours -->
          <div class="mt-8 bg-gradient-to-br from-navy to-navy-700 rounded-2xl p-6 text-white">
            <h3 class="font-bold text-xl mb-4 flex items-center">
              <svg class="w-6 h-6 mr-2 text-cyan" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
              </svg>
              Çalışma Saatleri
            </h3>
            <div class="space-y-2 text-gray-300">
              <p>{SITE_CONFIG.workingHours.weekdays}</p>
              <p class="text-red-400">{SITE_CONFIG.workingHours.weekend}</p>
            </div>
          </div>
        </div>

        <!-- Google Maps -->
        <div>
          <h2 class="font-display font-bold text-navy mb-8">
            Konum
          </h2>
          <div class="rounded-2xl overflow-hidden shadow-2xl h-[500px]">
            <iframe
              src={import.meta.env.PUBLIC_GOOGLE_MAPS_EMBED_URL || `https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3011.5!2d${SITE_CONFIG.coordinates.longitude}!3d${SITE_CONFIG.coordinates.latitude}!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDHCsDAxJzEwLjIiTiAyOMKwMzUnNDEuNiJF!5e0!3m2!1str!2str!4v1234567890`}
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Yıldızlar Grup DSG Servisi Konum"
            ></iframe>
          </div>
          <div class="mt-4">
            <a
              href={`https://www.google.com/maps/dir//${SITE_CONFIG.coordinates.latitude},${SITE_CONFIG.coordinates.longitude}/@${SITE_CONFIG.coordinates.latitude},${SITE_CONFIG.coordinates.longitude},15z`}
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-primary w-full"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
              </svg>
              Yol Tarifi Al
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-to-br from-primary to-cyan text-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-display font-bold mb-6">
          Hemen Randevu Alın
        </h2>
        <p class="text-xl mb-8 leading-relaxed">
          Aracınız için en iyi hizmeti almak üzere bizi arayın veya WhatsApp'tan mesaj gönderin
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={`tel:${SITE_CONFIG.phoneFormatted}`}
            class="btn bg-white text-primary hover:bg-gray-100 btn-lg"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            Hemen Ara
          </a>
          <a
            href={`https://wa.me/${SITE_CONFIG.phoneFormatted.replace(/\s+/g, '')}?text=${encodeURIComponent('Merhaba, DSG servisi hakkında bilgi almak istiyorum.')}`}
            target="_blank"
            rel="noopener noreferrer"
            class="btn bg-green-500 text-white hover:bg-green-600 btn-lg"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            WhatsApp Mesaj
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

