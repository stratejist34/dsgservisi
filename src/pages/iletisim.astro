---
import BaseLayout from '@layouts/BaseLayout.astro';
import { SITE_CONFIG } from '@utils/constants';

const title = 'İletişim | DSG Servisi - Randevu ve İletişim Bilgileri';
const description = 'Bize ulaşın, randevu alın. İstanbul Büyükçekmece\'de DSG şanzıman ve mekatronik servisi. Telefon: 0533 262 34 51';
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section - Modern Premium -->
  <section class="relative min-h-[35vh] flex items-center justify-center overflow-hidden">
    {/* Background Image */}
    <div class="absolute inset-0">
      <img 
        src="/images/workshop.jpg" 
        alt="DSG Servisi İletişim" 
        class="w-full h-full object-cover"
        width="1920"
        height="1080"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-navy/95 via-navy/90 to-navy/95"></div>
    </div>

    {/* Pattern Overlay */}
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%231a9cb0\' fill-opacity=\'0.4\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    {/* Glowing Stars */}
    <div class="absolute inset-0 overflow-hidden opacity-20">
      {Array.from({ length: 15 }).map((_, i) => (
        <div
          key={i}
          class="absolute w-1 h-1 bg-cyan rounded-full animate-glow-pulse"
          style={{
            left: `${Math.random() * 100}%`,
            top: `${Math.random() * 100}%`,
            animationDelay: `${Math.random() * 3}s`,
            animationDuration: `${2 + Math.random() * 2}s`,
          }}
        />
      ))}
    </div>

    <div class="container relative z-10 py-12">
      <div class="max-w-4xl mx-auto text-center">
        {/* Badge */}
        <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm text-white px-6 py-2 rounded-full mb-4 animate-[fade-in-up_0.6s_ease-out]">
          <svg class="w-5 h-5 text-cyan" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
          </svg>
          <span class="font-semibold">7/24 İletişimde</span>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-white mb-4 animate-[fade-in-up_0.8s_ease-out]">
          Bize <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary via-cyan to-primary">Ulaşın</span>
        </h1>
        
        <p class="text-base md:text-lg text-gray-300 leading-relaxed max-w-2xl mx-auto animate-[fade-in-up_1s_ease-out]">
          Randevu almak, soru sormak veya fiyat teklifi almak için bize ulaşın
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section bg-white">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="text-3xl md:text-4xl font-display font-bold text-navy mb-8">
            İletişim <span class="text-primary">Bilgileri</span>
          </h2>

          <div class="space-y-4">
            <!-- Phone -->
            <a 
              href={`tel:${SITE_CONFIG.phoneFormatted}`}
              class="group block bg-gradient-to-br from-primary/10 to-cyan/10 hover:from-primary/20 hover:to-cyan/20 rounded-2xl p-6 border-2 border-primary/20 hover:border-primary/40 transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
            >
              <div class="flex items-start gap-4">
                <div class="w-14 h-14 bg-gradient-to-br from-primary to-cyan rounded-xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform shadow-lg">
                  <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                  </svg>
                </div>
                <div class="flex-1">
                  <h3 class="font-bold text-lg text-navy mb-1 group-hover:text-primary transition-colors">Telefon</h3>
                  <p class="text-2xl font-bold text-primary mb-1">{SITE_CONFIG.phone}</p>
                  <p class="text-sm text-gray-600">{SITE_CONFIG.workingHours.weekdays}</p>
                </div>
              </div>
            </a>

            <!-- Email -->
            <a 
              href={`mailto:${SITE_CONFIG.email}`}
              class="group block bg-gradient-to-br from-cyan/10 to-primary/10 hover:from-cyan/20 hover:to-primary/20 rounded-2xl p-6 border-2 border-cyan/20 hover:border-cyan/40 transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
            >
              <div class="flex items-start gap-4">
                <div class="w-14 h-14 bg-gradient-to-br from-cyan to-primary rounded-xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform shadow-lg">
                  <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                  </svg>
                </div>
                <div class="flex-1">
                  <h3 class="font-bold text-lg text-navy mb-1 group-hover:text-cyan transition-colors">E-posta</h3>
                  <p class="text-lg font-semibold text-cyan break-all">{SITE_CONFIG.email}</p>
                </div>
              </div>
            </a>

            <!-- Address -->
            <div class="bg-gradient-to-br from-navy/5 to-primary/5 rounded-2xl p-6 border-2 border-navy/10">
              <div class="flex items-start gap-4">
                <div class="w-14 h-14 bg-gradient-to-br from-navy to-primary rounded-xl flex items-center justify-center flex-shrink-0 shadow-lg">
                  <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="flex-1">
                  <h3 class="font-bold text-lg text-navy mb-2">Adres</h3>
                  <p class="text-base text-gray-700 leading-relaxed mb-3">
                    {SITE_CONFIG.address.street}<br />
                    {SITE_CONFIG.address.city} / {SITE_CONFIG.address.state}
                  </p>
                  <a
                    href={`https://www.google.com/maps/dir/?api=1&destination=${SITE_CONFIG.coordinates.latitude},${SITE_CONFIG.coordinates.longitude}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-primary hover:text-cyan font-semibold transition-colors group"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                    </svg>
                    Yol Tarifi Al
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>

            <!-- Working Hours -->
            <div class="bg-gradient-to-br from-navy via-navy-700 to-navy rounded-2xl p-6 text-white shadow-2xl">
              <h3 class="font-bold text-xl mb-4 flex items-center">
                <svg class="w-6 h-6 mr-2 text-cyan" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                </svg>
                Çalışma Saatleri
              </h3>
              <div class="space-y-2 bg-white/10 rounded-xl p-4 backdrop-blur-sm">
                <div class="flex items-center justify-between">
                  <span class="text-gray-300">Hafta İçi:</span>
                  <span class="font-semibold text-cyan">{SITE_CONFIG.workingHours.weekdays}</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-gray-300">Hafta Sonu:</span>
                  <span class="font-semibold text-red-400">{SITE_CONFIG.workingHours.weekend}</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Google Maps -->
        <div>
          <h2 class="text-3xl md:text-4xl font-display font-bold text-navy mb-8">
            <span class="text-primary">Bizi</span> Ziyaret Edin
          </h2>
          <div class="rounded-2xl overflow-hidden shadow-2xl h-[400px] md:h-[500px] border-4 border-primary/10">
            <iframe
              src={`https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3011.5!2d${SITE_CONFIG.coordinates.longitude}!3d${SITE_CONFIG.coordinates.latitude}!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDHCsDAxJzEwLjIiTiAyOMKwMzUnNDEuNiJF!5e0!3m2!1str!2str!4v1234567890`}
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Yıldızlar Grup DSG Servisi Konum"
            ></iframe>
          </div>
          <div class="mt-6">
            <a
              href={`https://www.google.com/maps/dir/?api=1&destination=${SITE_CONFIG.coordinates.latitude},${SITE_CONFIG.coordinates.longitude}`}
              target="_blank"
              rel="noopener noreferrer"
              class="group w-full inline-flex items-center justify-center gap-3 bg-gradient-to-r from-primary to-cyan text-white px-8 py-4 rounded-xl font-bold text-lg hover:shadow-2xl hover:scale-105 transition-all duration-300"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
              </svg>
              Yol Tarifi Al
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative section overflow-hidden">
    {/* Gradient Background */}
    <div class="absolute inset-0 bg-gradient-to-br from-primary via-cyan to-primary opacity-95"></div>
    
    {/* Animated Pattern */}
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'1\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <div class="container relative z-10">
      <div class="max-w-4xl mx-auto text-center text-white">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold mb-4">
          Hemen <span class="text-navy">Randevu</span> Alın
        </h2>
        <p class="text-lg md:text-xl mb-10 leading-relaxed text-white/90">
          Aracınız için en iyi hizmeti almak üzere bizi arayın veya WhatsApp'tan mesaj gönderin
        </p>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 max-w-2xl mx-auto">
          <a
            href={`tel:${SITE_CONFIG.phoneFormatted}`}
            class="group bg-white text-primary hover:bg-navy hover:text-white px-8 py-5 rounded-xl font-bold text-lg shadow-2xl hover:shadow-navy/50 hover:scale-105 transition-all duration-300 inline-flex items-center justify-center gap-3"
          >
            <svg class="w-6 h-6 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            <span>Hemen Ara</span>
          </a>
          <a
            href={`https://wa.me/${SITE_CONFIG.phoneFormatted.replace(/\s+/g, '')}?text=${encodeURIComponent('Merhaba, DSG servisi hakkında bilgi almak istiyorum.')}`}
            target="_blank"
            rel="noopener noreferrer"
            class="group bg-green-500 hover:bg-green-600 text-white px-8 py-5 rounded-xl font-bold text-lg shadow-2xl hover:shadow-green-600/50 hover:scale-105 transition-all duration-300 inline-flex items-center justify-center gap-3"
          >
            <svg class="w-6 h-6 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            <span>WhatsApp Mesaj</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

