---
import BaseLayout from '@layouts/BaseLayout.astro';
import BlogCard from '@components/blog/BlogCard.astro';
import PostGridPattern from '@components/blog/PostGridPattern.astro';
import { getCollection } from 'astro:content';
import { sortPostsByDate, getCategoriesWithCounts, getCategoryLogo, getCategoryLink } from '@utils/content';

const title = 'Blog Önizleme | DSG Servisi - Tüm Yazılar (Yayınlanmamış Dahil)';
const description = 'Blog yazıları önizleme sayfası - Yayınlanmış ve planlanmış tüm yazılar.';
const image = '/images/workshop.jpg';

// TÜM yazıları al (draft hariç, publishDate kontrolü YOK)
const allEntries = await getCollection('blog', ({ data }) => !data.draft);
const posts = sortPostsByDate(allEntries);

// Yayınlanmış ve planlanmış yazıları ayır
const now = new Date();
const publishedPosts = posts.filter(post => {
  const publishDate = post.data.publishDate instanceof Date 
    ? post.data.publishDate 
    : new Date(post.data.publishDate);
  return publishDate <= now;
});

const scheduledPosts = posts.filter(post => {
  const publishDate = post.data.publishDate instanceof Date 
    ? post.data.publishDate 
    : new Date(post.data.publishDate);
  return publishDate > now;
});

const PAGE_SIZE = 16;
const currentPage = 1;
const totalPages = Math.ceil(posts.length / PAGE_SIZE) || 1;
const visiblePosts = posts.slice(0, PAGE_SIZE);

// Kategorileri al ve logo/link bilgileriyle eşleştir
const categoriesWithCounts = getCategoriesWithCounts(posts);
const priorityOrder = ['Audi', 'BMW', 'Mercedes', 'Land Rover', 'Porsche', 'Seat', 'Skoda', 'Volkswagen', 'DSG'];
const categoryLogos = categoriesWithCounts
  .filter(cat => getCategoryLogo(cat.name))
  .sort((a, b) => {
    const indexA = priorityOrder.indexOf(a.name);
    const indexB = priorityOrder.indexOf(b.name);
    if (indexA === -1 && indexB === -1) return a.name.localeCompare(b.name);
    if (indexA === -1) return 1;
    if (indexB === -1) return -1;
    return indexA - indexB;
  });
---

<BaseLayout title={title} description={description} image={image}>
  <main class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <div class="container max-w-7xl mx-auto px-4 py-12">
      <!-- Preview Uyarısı -->
      <div class="mb-8 p-4 bg-yellow-100 border-l-4 border-yellow-500 rounded-lg">
        <div class="flex items-center gap-2">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <div>
            <h2 class="text-lg font-bold text-yellow-800">Önizleme Modu</h2>
            <p class="text-sm text-yellow-700">Bu sayfa yayınlanmış ve planlanmış tüm yazıları gösterir. Normal blog sayfası için <a href="/blog" class="underline font-semibold">buraya tıklayın</a>.</p>
          </div>
        </div>
      </div>

      <!-- İstatistikler -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <div class="bg-white p-4 rounded-lg shadow-md border border-gray-200">
          <div class="text-2xl font-bold text-primary">{posts.length}</div>
          <div class="text-sm text-gray-600">Toplam Yazı</div>
        </div>
        <div class="bg-green-50 p-4 rounded-lg shadow-md border border-green-200">
          <div class="text-2xl font-bold text-green-600">{publishedPosts.length}</div>
          <div class="text-sm text-gray-600">Yayınlanmış</div>
        </div>
        <div class="bg-blue-50 p-4 rounded-lg shadow-md border border-blue-200">
          <div class="text-2xl font-bold text-blue-600">{scheduledPosts.length}</div>
          <div class="text-sm text-gray-600">Planlanmış (Gelecek Tarihli)</div>
        </div>
      </div>

      <!-- Planlanmış Yazılar -->
      {scheduledPosts.length > 0 && (
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-navy mb-6 flex items-center gap-2">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Planlanmış Yazılar ({scheduledPosts.length})
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
            {scheduledPosts.map((post, index) => {
              const publishDate = post.data.publishDate instanceof Date 
                ? post.data.publishDate 
                : new Date(post.data.publishDate);
              const formattedDate = publishDate.toLocaleDateString('tr-TR', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
              });
              return (
                <div class="relative">
                  <BlogCard post={post} index={index} size="rect-regular" />
                  <div class="absolute top-2 right-2 bg-blue-500 text-white text-xs px-2 py-1 rounded-full font-semibold">
                    {formattedDate}
                  </div>
                </div>
              );
            })}
          </div>
        </section>
      )}

      <!-- Yayınlanmış Yazılar -->
      <section>
        <h2 class="text-2xl font-bold text-navy mb-6 flex items-center gap-2">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Yayınlanmış Yazılar ({publishedPosts.length})
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {publishedPosts.map((post, index) => (
            <BlogCard post={post} index={index} size="rect-regular" />
          ))}
        </div>
      </section>

      <!-- Kategoriler -->
      {categoryLogos.length > 0 && (
        <section class="mt-12">
          <h2 class="text-2xl font-bold text-navy mb-6">Kategoriler</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
            {categoryLogos.map((category) => {
              const logo = getCategoryLogo(category.name);
              const link = getCategoryLink(category.name);
              return (
                <a
                  href={link}
                  class="flex flex-col items-center p-4 bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow border border-gray-200 hover:border-primary"
                >
                  {logo && (
                    <img
                      src={logo}
                      alt={`${category.name} logo`}
                      class="w-16 h-16 object-contain mb-2"
                      loading="lazy"
                    />
                  )}
                  <span class="text-sm font-semibold text-gray-800 text-center">{category.name}</span>
                  <span class="text-xs text-gray-500 mt-1">({category.count} yazı)</span>
                </a>
              );
            })}
          </div>
        </section>
      )}
    </div>
  </main>
</BaseLayout>

