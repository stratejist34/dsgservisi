---
import { getCollection } from 'astro:content';
import BlogLayout from '@layouts/BlogLayout.astro';
import BlogCard from '@components/blog/BlogCard.astro';
import TableOfContents from '@components/blog/TableOfContents.tsx';
import { findRelatedPosts, calculateReadingTime, extractPriceRangeFromHtml, extractFaqsFromHtml, isPublishedPost } from '@utils/content';
import { getBlogFeaturedImage } from '@utils/content';

export async function getStaticPaths() {
  // Yayınlanmış yazılar için route oluştur
  const publishedPosts = await getCollection('blog', ({ data }) => isPublishedPost(data));
  
  // Gelecek tarihli yazılar için de route oluştur (preview için, noindex ile)
  const allPosts = await getCollection('blog', ({ data }) => !data.draft);
  const scheduledPosts = allPosts.filter((post) => {
    const publishDate = post.data.publishDate instanceof Date 
      ? post.data.publishDate 
      : new Date(post.data.publishDate);
    return publishDate > new Date();
  });
  
  // Yayınlanmış yazılar
  const publishedRoutes = publishedPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post, isPublished: true },
  }));
  
  // Gelecek tarihli yazılar (preview için)
  const scheduledRoutes = scheduledPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post, isPublished: false },
  }));
  
  return [...publishedRoutes, ...scheduledRoutes];
}

const { post, isPublished } = Astro.props;
const { Content } = await post.render();
const data = post.data;

// Gelecek tarihli yazılar için preview uyarısı göster
const publishDate = data.publishDate instanceof Date 
  ? data.publishDate 
  : new Date(data.publishDate);
const showPreviewWarning = !isPublished && publishDate > new Date();

// Sadece yayınlanmış yazıları al (ilgili yazılar için - SEO için kritik!)
const allPostsForRelated = await getCollection('blog', ({ data }) => !data.draft);
const publishedPostsForRelated = allPostsForRelated.filter(post => isPublishedPost(post.data));
const relatedPosts = findRelatedPosts(post, publishedPostsForRelated, 3);

// Okuma süresini hesapla
const readingTime = data.readingTime || calculateReadingTime(Content.toString());

// Tarih formatı (publishDate zaten yukarıda tanımlı)
const formattedDate = publishDate.toLocaleDateString('tr-TR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
// İçerikten otomatik fiyat bilgisi ve FAQ çıkar (şemalar için)
const html = Content.toString();
const extractedService = extractPriceRangeFromHtml(html);
const extractedFaqs = extractFaqsFromHtml(html);
---

<BlogLayout post={post} extractedService={extractedService} extractedFaqs={extractedFaqs} isPublished={isPublished}>
  <Fragment slot="head">
    {/* TOC Sticky ve aktif link stilleri - hyundaiservisim stili */}
    <style is:inline>
      
      /* TOC aktif link stilleri */
      aside nav a.toc-active {
        background-color: rgb(26 156 176 / 0.1) !important;
        border-left-color: rgb(26 156 176) !important;
        color: rgb(26 156 176) !important;
        font-weight: 600 !important;
      }
      
      /* TOC hover stili */
      aside nav a:hover:not(.toc-active) {
        background-color: rgb(26 156 176 / 0.05) !important;
        border-left-color: rgb(26 156 176) !important;
      }
    </style>
  </Fragment>
  <article class="py-8 bg-white">
    <div class="container mx-auto px-4 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start relative">
        <!-- Sol: İçerik -->
        <div class="lg:col-span-2">
          <!-- Breadcrumb -->
          <nav class="text-sm text-gray-600 mb-4">
            <a href="/" class="hover:text-primary transition-colors">Ana Sayfa</a>
            <span class="mx-2">/</span>
            <a href="/blog" class="hover:text-primary transition-colors">Blog</a>
            <span class="mx-2">/</span>
            <span class="text-gray-900 font-medium">{data.title}</span>
          </nav>

          <!-- Preview Uyarısı (Gelecek Tarihli Yazılar İçin) -->
          {showPreviewWarning && (
            <div class="mb-6 p-4 bg-yellow-100 border-l-4 border-yellow-500 rounded-lg">
              <div class="flex items-center gap-2">
                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <div>
                  <h2 class="text-lg font-bold text-yellow-800">Önizleme Modu</h2>
                  <p class="text-sm text-yellow-700">
                    Bu yazı henüz yayınlanmamıştır. Yayınlanma tarihi: {formattedDate}
                    <br />
                    <a href="/blog/preview" class="underline font-semibold">Tüm planlanmış yazıları görmek için tıklayın</a>
                  </p>
                </div>
              </div>
            </div>
          )}

          <!-- Header -->
          <header class="mb-6">
            <!-- Category Badge -->
            {data.category && (
              <div class="inline-flex items-center gap-2 bg-gradient-to-r from-primary to-cyan text-white px-4 py-2 rounded-full text-sm font-semibold mb-4">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
                {data.category}
              </div>
            )}

            <!-- Title -->
            <h1 class="font-display font-bold text-navy mb-6 text-2xl md:text-3xl lg:text-4xl leading-tight">
              {data.title}
            </h1>

            <!-- Meta Information -->
            <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 mb-8 pb-8 border-b border-gray-200">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span>{data.author || 'DSG Servisi'}</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <time datetime={publishDate.toISOString()}>{formattedDate}</time>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>{readingTime} dakika okuma</span>
              </div>
            </div>

            <!-- Tags -->
            {data.tags && data.tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mb-6">
                {data.tags.map((tag) => (
                  <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-xs font-medium">
                    #{tag}
                  </span>
                ))}
              </div>
            )}

            <!-- Featured Image -->
            {data.featuredImage && (
              <div class="mb-8 rounded-2xl overflow-hidden shadow-lg">
                <img
                  src={getBlogFeaturedImage(post)}
                  alt={data.imageAlt || data.title}
                  class="w-full h-auto object-cover"
                  loading="eager"
                  width="1200"
                  height="675"
                />
              </div>
            )}
          </header>

          <!-- Blog İçeriği -->
          <div 
            class="prose prose-lg w-full max-w-none prose-headings:text-navy prose-headings:font-display prose-a:text-primary prose-a:no-underline hover:prose-a:underline prose-strong:text-navy prose-img:rounded-xl prose-img:shadow-lg prose-headings:scroll-mt-24" 
            id="article-content"
          >
            <Content />
          </div>

          <!-- Author Box -->
          <div class="mt-12 p-6 bg-gradient-to-br from-gray-50 to-white rounded-2xl border border-gray-200">
            <div class="flex items-start gap-4">
              {data.authorImage ? (
                <img
                  src={data.authorImage}
                  alt={data.author || 'Yazar'}
                  class="w-16 h-16 rounded-full object-cover"
                />
              ) : (
                <div class="w-16 h-16 bg-gradient-to-br from-primary to-cyan rounded-full flex items-center justify-center text-white font-bold text-xl">
                  {(data.author || 'DSG')[0]}
                </div>
              )}
              <div>
                <h3 class="font-display font-bold text-navy mb-1">{data.author || 'DSG Servisi'}</h3>
                <p class="text-gray-600 text-sm">
                  DSG şanzıman ve mekatronik sistemleri konusunda uzman ekibimizden bilgilendirici içerikler.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Sağ: İçindekiler (Table of Contents) -->
        <aside class="lg:col-span-1 toc-sticky lg:pl-2 xl:pl-4" style="position: -webkit-sticky; position: sticky; top: 5rem; align-self: start; display: block; visibility: visible; opacity: 1;">
          <TableOfContents client:load contentId="article-content" />
        </aside>
      </div>
    </div>
  </article>

  <!-- Related Posts -->
  {relatedPosts.length > 0 && (
    <section class="section bg-gradient-to-b from-gray-50 to-white">
      <div class="container max-w-7xl">
        <h2 class="font-display font-bold text-navy mb-8 text-2xl md:text-3xl">
          İlgili Yazılar
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {relatedPosts.map((relatedPost, index) => (
            <BlogCard post={relatedPost} index={index} size="rect-regular" />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="section bg-gradient-to-br from-navy to-navy-700 text-white">
    <div class="container max-w-7xl">
      <div class="text-center">
        <h2 class="font-display font-bold mb-6 text-2xl md:text-3xl">
          Profesyonel DSG Servisi Hizmeti
        </h2>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          DSG şanzıman ve mekatronik konusunda uzman ekibimizle tanışın. 
          15 yıllık deneyim ve 6500+ mutlu müşteri ile güvenilir çözümler.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/iletisim" class="btn bg-gradient-to-r from-primary to-cyan text-white hover:shadow-lg hover:shadow-primary/50 transition-all">
            Randevu Alın
          </a>
          <a href="/hizmetlerimiz" class="btn bg-white text-navy hover:bg-gray-100">
            Hizmetlerimiz
          </a>
        </div>
      </div>
    </div>
  </section>
</BlogLayout>
